<div class = "form-group">
  <%= form_for @user do |f| %>
    <%= f.label :nickname %>
    <%= f.text_field :nickname %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <%= f.submit %>
  <% end %>
</div>